            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Comming Soon"
            android:textSize="35sp"
            android:textStyle="bold"
            android:textColor="@color/design_default_color_primary"/>

    </RelativeLayout>

</FrameLayout>